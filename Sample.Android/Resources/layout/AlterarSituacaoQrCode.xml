<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="5">
  <Button
      android:text="SCANNER COM INTERFACE PADRÃO"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/buttonScanDefaultView"
      android:layout_weight="1" />
  <Button
      android:text="SCANNER CONTINUO"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/buttonScanContinuous"
      android:layout_weight="1" />
  <Button
      android:id="@+id/buttonScanCustomView"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="SCANNER CONTINUO COM INTERFACE CUSTOMIZADA"
      android:layout_weight="1" />
  <Button
      android:text="SCANNER COM FRAGMENTOS"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/buttonFragment"
      android:layout_weight="1" />
  <Button
      android:text="GERADOR DE CÓDIGO DE BARRAS"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/buttonGenerate"
      android:layout_weight="1" />
