<resources>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#2196f3</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="AlertDialogStyle" parent="@android:style/Theme.Holo.Dialog">
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
	    <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
	    <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
	</style>
	
	<style name="DialogWindowTitle">
	    <item name="android:maxLines">1</item>
	    <item name="android:scrollHorizontally">true</item>
	    <item name="android:textAppearance">@style/DialogWindowTitleAppearance</item>
	</style>
	
	<style name="DialogWindowTitleAppearance" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
	    <item name="android:textColor">#2196f3</item>
	</style>

    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">@color/white_color</item>
    </style> 

    <style name="background">
        <item name="android:background">#DDE9F4</item>
    </style>
	<style name="TextLargeStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextMediumStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextMediumStyleBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="TextMediumStyleWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="TextMediumStyleDefaultColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/TextDefault</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="TextMediumStyleWhiteBold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextMediumStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextMediumDialogStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSmallStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="TextSmallStyleDefaultColor" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/TextDefault</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
	<style name="TextSmallStyleBoldDefaultColor" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/TextDefault</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextSmallStyleBlack" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="LineLayoutStyle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="LineLayoutBox">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Padding">
        <item name="android:padding">10dp</item>
    </style>

    <style name="Margin">
        <item name="android:layout_margin">10dp</item>
    </style>
    
    <color name="TextDefault">#5E5E5E</color>

</resources>
